
<h1>Welcome <%= @user.name %></h1>
<%= image_tag @user.image %>

<p><%= link_to "Find Friends", users_friends_path %></p>


<h2>Your Friends</h2>
<ul>
  <% for friendship in @friendships %>
  <li>
    <%= h friendship.name %>
    (<%= link_to "remove", friendship, :method => :delete %>)
  </li>
  <% end %>
</ul>

<%= form_tag("/send_text?number_to_send_to=#{@current_user.phone}", method: :post) do -%>
  <div><%= submit_tag 'Submit' %></div>
<% end -%>
