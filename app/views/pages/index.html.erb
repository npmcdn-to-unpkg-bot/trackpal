<script src="/assets/pages.js" charset="utf-8"></script>
<div class="homescreenlogo">
  <%= image_tag "/assets/tracklogo.jpg", :class => "logo" %>
</div>
<div class="container homescreenimg">
    <div class="row col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-2 heading">
      <h2 id="logo">Track Your Pals</h2>
    </div>
    <% if @current_user.nil? %>
    <div class="row col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3">
        <%= form_tag '/login' do  %>
        <!-- <h2 class="form-signin-heading">Sign in</h2> -->
        <%= label_tag(:email, "Email", :autofocus => true) %>
        <%= text_field_tag(:email, nil, :id => "inputEmail", :class => "form-control",  :placeholder => "Email address") %>
        <%= label_tag(:password, "Password") %>
        <%= password_field_tag(:password, nil, :id => "inputPassword", :class => "form-control",  :placeholder => "Password") %>
        <%= submit_tag('Login', :id => "submit", :class => "btn btn-lg btn-primary btn-block loginBtn" )%>
        <% end %>
    </div>
    <% end %>
</div>
